<%- include('./partials/head.ejs')%> 	<!-- Head -->
<body>
	<%- include('./partials/header.ejs')%> 	<!-- Header -->
	<!-- Banner -->
	<div class="banner">
		<img src="/images/foto-vinilo.jpeg" alt="Banner de ofertas">
	</div>
	
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<%for (let i=0; i < product.length; i++){ %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/productos/product/<%- product[i].id %>">
						<div>
							<figure class="product-box_image">
								<img src=<%= product[i].img_url %>>
							</figure>
							<article class="product-box_data">
								<h2><%= product[i].nombre %></h2>
								<p><%= product[i].descripcion %></p>
								<p>Usuario: <%= product[i].usuarios.username %></p>
							</article>
						</div>
					</a>
				</section>
			</div>
			<%}%>
		</div>
	</div>
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">MÃ¡s comentados</h2>
			</div>
			<%for (let i=0; i < product.length; i++){ %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/productos/product">
						
							<figure class="product-box_image">
								<img src=<%=product[i].img_url%> >
							</figure>
							<article class="product-box_data">
								<h2><%= product[i].nombre %></h2>
								<p><%= product[i].descripcion %></p>
								<a href="/users/profile/<%= product[i].usuarios.id  %>"><%= product[i].usuarios.username%> </a>
							</article>
					</a>
					
				</section>
			</div>
			<%}%>
		</div>
	</div>
	<%- include("./partials/footer.ejs")%> 	<!-- Footer -->
</body>	
</html>

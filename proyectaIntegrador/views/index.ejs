<%- include('./partials/head.ejs')%> 	<!-- Head -->
<body>
	<%- include('./partials/header.ejs')%> 	<!-- Header -->
	<!-- Banner -->
	<div class="banner">
		<img src="/images/foto-vinilo.jpeg" alt="Banner de ofertas">
	</div>
	
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<%for (let i=0; i < products.length; i++){ %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/productos/product">
						<div>
							<figure class="product-box_image">
								<img src=<%= products[i].foto %>>
							</figure>
							<article class="product-box_data">
								<h2><%= products[i].nombre %></h2>
								<!-- Aca es donde se pone la relacion, en este caso que ene l producto diga que usuario lo subio <p><%= products[i]?.['usuarios.name']%></p> -->
								<p><%= products[i].descripcion %></p>
								<p>Comentarios: <%= comentarios.length %></p>
							</article>
						</div>
					</a>
				</section>
			</div>
			<%}%>
		</div>
	</div>
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">MÃ¡s comentados</h2>
			</div>
			<%for (let i=0; i < products.length; i++){ %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/productos/product">
						
							<figure class="product-box_image">
								<img src=<%=products[i].foto%> >
							</figure>
							<article class="product-box_data">
								<h2><%= products[i].nombre%></h2>
								<p><%= products[i].descripcion%></p>
								<p>Comentarios: 12</p>
							</article>
						
					</a>
				</section>
			</div>
			<%}%>
		</div>
	</div>
	<%- include("./partials/footer.ejs")%> 	<!-- Footer -->
</body>	
</html>
